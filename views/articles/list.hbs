<div class="container mt-4">
    <h2 class="text-center mb-4">Danh Sách Bài Viết</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Author</th>
                <th>Abstract</th>
                <th>Category</th>
                <th>Premium</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each articles}}
            <tr>
                <td>{{@index}}</td>
                <td>{{this.title}}</td>
                <td>{{this.author}}</td>
                <td>{{this.abstract}}</td>
                <td>{{this.category_name}}</td>
                <td>
                    {{#if this.is_premium}}
                        <span>⭐</span>
                    {{else}}
                        <span>-</span>
                    {{/if}}
                </td>
                <td>
                    <a href="/articles/detail?id={{this.id}}" class="btn btn-info btn-sm">View</a>
                    <form action="/articles/delete/{{this.id}}" method="POST" style="display: inline-block;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa bài viết này?')">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
