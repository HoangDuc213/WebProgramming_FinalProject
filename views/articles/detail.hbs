<div class="container mt-4">
  <!-- Article Header -->
  <div class="article-header text-center">
    <h1 class="article-title">{{article.title}}</h1>
    <p class="article-author text-muted">By <strong>{{article.author}}</strong></p>
    <p class="article-category text-primary">Category: {{article.category_name}}</p>
    <p class="article-abstract"><strong>Abstract:</strong> {{article.abstract}}</p>
    <img src="/uploads/{{article.id}}.png" class="img-fluid img-thumbnail" alt="Article Image">
  </div>

  <hr>

  <!-- Article Content -->
  <div class="article-content">
    {{{article.content}}} <!-- Nội dung bài viết có thể chứa HTML -->
  </div>

  <!-- Image Section -->
  <div class="article-images mt-4">
    <h3>Images</h3>
    {{#if article.images.length}}
    <div class="row">
      {{#each article.images}}
      <div class="col-md-4">
        <img src="/uploads/{{this}}" class="img-fluid img-thumbnail" alt="Article Image">
      </div>
      {{/each}}
    </div>
    {{else}}
      <p>Không có hình ảnh cho bài viết này.</p>
    {{/if}}
  </div>

  <!-- Related Articles Section -->
  <div class="container mt-4">
    <h2 class="text-center mb-4">Bài viết liên quan</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Author</th>
          <th>Abstract</th>
          <th>Category</th>
          <th>Premium</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each top5category}}
        <tr>
          <td>{{@index}}</td>
          <td>{{this.title}}</td>
          <td>{{this.author}}</td>
          <td>{{this.abstract}}</td>
          <td>{{this.category_name}}</td>
          <td>
            {{#if this.is_premium}}
              <span>⭐</span>
            {{else}}
              <span>-</span>
            {{/if}}
          </td>
          <td>
            <a href="/articles/detail?id={{this.id}}" class="btn btn-info btn-sm">View</a>
            <form action="/articles/delete/{{this.id}}" method="POST" style="display: inline-block;">
              <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa bài viết này?')">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <!-- Back Button -->
  <a href="/articles/home" class="btn btn-secondary mt-3">Quay lại</a>
</div>