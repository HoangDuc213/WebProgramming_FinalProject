<form action="" method="post">
  <div class="card">
    <h5 class="card-header">
      Edit Category
    </h5>
    <div class="card-body">
      <div class="form-group">
        <label for="txtCatID">Category ID</label>
        <input type="text" name="category_id" id="txtCatID" class="form-control" readonly value="{{this.category.category_id}}">
      </div>
      <div class="form-group">
        <label for="txtCatName">Category Name</label>
        <input type="text" name="category_name" id="txtCatName" class="form-control" placeholder="Laptop" value="{{this.category.category_name}}">
      </div>
    </div>
    <div class="card-footer text-muted">
      <a href="/admin/categories" class="btn btn-outline-success">
        <i class="bi bi-arrow-left"></i>
        List
      </a>
      <button type="submit" class="btn btn-danger" formaction="/admin/categories/del">
        <i class="bi bi-trash"></i>
        Delete
      </button>
      <button type="submit" class="btn btn-primary" formaction="/admin/categories/patch">
        <i class="bi bi-check2"></i>
        Save
      </button>
    </div>
  </div>
</form>