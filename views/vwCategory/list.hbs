<div class="card">
  <h5 class="card-header d-flex justify-content-between">
    Categories
    <a class="btn btn-sm btn-outline-primary" href="/admin/categories/add" role="button">
      <i class="bi bi-plus-square"></i>
      New Category
    </a>
  </h5>
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Category</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.categories}}
        <tr>
          <td scope="row">{{category_id}}</td>
          <td>{{category_name}}</td>
          <td class="text-right">
            <a class="btn btn-sm btn-outline-primary" href="/admin/categories/edit?id={{category_id}}" role="button">
              <i class="bi bi-pencil-square"></i>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    Footer
  </div>
</div>