<div class="card">
  <h5 class="card-header">
    Products by category
  </h5>
  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">Không có dữ liệu</p>
  </div>
  {{else}}
  <div class="card-body">
    <div class="row">
      {{#each this.articles}}
      <div class="col-sm-6 mb-3">
        <div class="card">
          <img src="/static/imgs/sp/{{id}}/main.jpg" alt="{{title}}" title="{{title}}" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <h5 class="card-title text-danger">{{format_number Price}}</h5>
            <p class="card-text">{{author}}</p>
          </div>
          <div class="card-footer text-muted">
            <a class="btn btn-outline-primary btn-sm" href="/articles/detail?id={{id}}" role="button">
              <i class="bi bi-eye-fill"></i>
              View Details
            </a>
            <a class="btn btn-outline-success btn-sm" href="#" role="button">
              <i class="bi bi-cart-plus-fill"></i>
              Add to cart
            </a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <ul class="pagination">
      <li class="page-item disabled">
        <a class="page-link">Previous</a>
      </li>
      {{#each this.page_items}}
      {{#if active}}
      <li class="page-item active">
        <a class="page-link" href="#">{{value}}</a>
      </li>
      {{else}}
      <li class="page-item">
        <a class="page-link" href="/articles/byCat?id={{../catId}}&page={{value}}">{{value}}</a>
      </li>
      {{/if}}
      {{/each}}
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
    </ul>
  </div>
  {{/if}}
  <div class="card-footer text-muted">
    Footer
  </div>
</div>