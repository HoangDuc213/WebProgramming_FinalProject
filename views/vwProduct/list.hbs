<div class="card">
  <h5 class="card-header">
    Products
  </h5>
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.articles}}
        <tr>
          <td scope="row">{{id}}</td>
          <td>{{title}}</td>
          <td>{{Price}}</td>
          <td>{{Quantity}}</td>
          <td class="text-right">
            <a class="btn btn-sm btn-outline-primary" href="#" role="button">
              <i class="bi bi-pencil-square"></i>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    Footer
  </div>
</div>